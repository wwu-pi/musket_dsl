#config PLATFORM GPU CPU_MPMD
#config PROCESSES 1
#config GPUS 1
#config CORES 24
#config MODE release

const int dim = 32768;

matrix<float,dim,dim,dist,dist> as;

float init(int x, int y, float a){
	a = (float) (x + y + 1);
	return a;
}

float square(float a){
	a = a * a;
	return a;
}


main{
	as.mapIndexInPlace(init());
	
	mkt::roi_start();
	
	as.mapInPlace(square());
	float fn = as.reduce(plus);
	fn = mkt::sqrt(fn);
	
	mkt::roi_end();
	
	mkt::print("Frobenius norm is %.5f.\n", fn);
}
